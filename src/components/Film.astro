---
import type { GetImageResult, ImageInputFormat, ImageMetadata } from "astro";
import { Image, type LocalImageProps } from "astro:assets";
interface Props {
	href: string;
	img: Partial<ImageMetadata>;
	gifUrl: string;
}

const { href, img, gifUrl } = Astro.props;
---

<div class="film">
	<a href={href}>
		<Image
			class="image"
			alt={href}
			src={img.src}
			width={img.width}
			height={img.height}
			format={img.format}
		/>
	</a>
</div>
<style>
	.film {
	}
	.film .image {
		height: 100%;
		object-fit: cover;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
