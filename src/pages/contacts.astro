---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import waImage from "../images/social-icons/wa.png";
import youtubeImage from "../images/social-icons/youtube.png";
import instImage from "../images/social-icons/inst.png";
import avatarImage from "../images/avatar.png";
---

<Layout>
	<div class="page">
		<div class="contacts">
			<h1>Contact</h1>
			<div>
				<p>
					<a href="mailto:utrozhizni63@gmail.com">utrozhizni63@gmail.com</a>
				</p>
				<p>telegram: <a href="https://t.me/utrozhizni">utrozhizni</a></p>
				<p>
					whats app: <a href="https://wa.me/"></a>
				</p>
				<p><a href="tel:">tel:</a></p>
			</div>
			<div class="icons-part">
				<a href="https://www.instagram.com/utrozhizni/"
					><Image alt="instagram" class="icon" src={instImage} /></a
				>
				<a href="https://www.instagram.com/utrozhizni/"
					><Image alt="youtube" class="icon" src={youtubeImage} /></a
				>
				<a href="https://wa.me/"
					><Image alt="whatsapp" class="icon" src={waImage} /></a
				>
			</div>
		</div>
		<Image alt="avatar" class="avatar" src={avatarImage} />
	</div>
</Layout>

<style>
	.page {
		height: 100%;
		display: grid;
		grid-template-columns: 50% 50%;
		grid-auto-rows: min-content;
		align-items: center;
		align-content: center;
	}
	.contacts {
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}
	.text-part {
	}
	.icons-part {
		display: flex;
		flex-direction: row;
		gap: 16px;
	}
	h1 {
		color: white;
	}
	p {
		color: white;
	}
	a {
		color: inherit; /* blue colors for links too */
		text-decoration: inherit; /* no underline */
	}
	.icon {
		width: 32px;
		height: 32px;
		object-fit: cover;
	}
	.avatar {
		border-radius: 50%;
		height: unset;
	}
</style>
