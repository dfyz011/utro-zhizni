---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import waImage from "../images/social-icons/wa.png";
import youtubeImage from "../images/social-icons/youtube.png";
import instImage from "../images/social-icons/inst.png";
import avatarImage from "../images/avatar.png";
---

<Layout>
	<div class="container">
		<div class="contacts">
			<h1>Contact</h1>
			<div class="text-part">
				<p>
					<a href="mailto:utrozhizni63@gmail.com">utrozhizni63@gmail.com</a>
				</p>
				<p>telegram: <a href="https://t.me/utrozhiznii">utrozhiznii</a></p>
				<p>
					whats app: <a href="https://wa.me/6282145056180">+6282145056180</a>
				</p>
				<p><a href="tel:+6282145056180">tel: +6282145056180</a></p>
			</div>
			<div class="icons-part">
				<a href="https://www.instagram.com/utrozhizni/"
					><Image
						loading="lazy"
						alt="instagram"
						class="icon"
						src={instImage}
					/></a
				>
				<a href="https://www.youtube.com/@utrozhizni"
					><Image
						loading="lazy"
						alt="youtube"
						class="icon"
						src={youtubeImage}
					/></a
				>
				<a href="https://wa.me/6282145056180"
					><Image loading="lazy" alt="whatsapp" class="icon" src={waImage} /></a
				>
			</div>
		</div>
		<Image loading="lazy" alt="avatar" class="avatar" src={avatarImage} />
	</div>
</Layout>

<style>
	.container {
		height: 100%;
		display: grid;
		grid-template-columns: 50% 50%;
		grid-auto-rows: min-content;
		align-items: center;
		align-content: center;

		@media screen and (min-width: 960px) {
			padding: 16px 32px;
		}
		@media screen and (max-width: 640px) {
			grid-template-columns: auto;
			gap: 32px;
		}
	}
	.contacts {
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		@media screen and (max-width: 640px) {
			gap: 16px;
		}
	}
	.text-part {
		color: white;
		display: flex;
		flex-direction: column;
		gap: 8px;
		font-size: 20px;
		@media screen and (max-width: 640px) {
			font-size: 16px;
		}
	}
	.icons-part {
		display: flex;
		flex-direction: row;
		gap: 16px;
	}
	h1 {
		color: white;
		font-weight: bold;
		font-size: 42px;
		@media screen and (max-width: 640px) {
			font-size: 32px;
		}
	}
	a {
		color: inherit; /* blue colors for links too */
		text-decoration: inherit; /* no underline */
	}
	.icon {
		width: 32px;
		height: 32px;
		object-fit: cover;
	}
	.avatar {
		border-radius: 50%;
		height: unset;
	}
</style>
